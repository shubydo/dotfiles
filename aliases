# General
alias reload="source ~/.zshrc"
alias v="$EDITOR" # nvim
alias zshrc="$EDITOR ~/.zshrc"
alias aliases="$EDITOR ~/.aliases"

# Mac specific
alias sed="gsed"

# git
alias ga="git add"
alias glog="git log"
alias gcan="git commit --amend --no-edit"
alias gcm="git commit -m"
alias gs="git status"

# asdf
# GOROOT re-shim fix: <https://github.com/kennyp/asdf-golang/issues/28#issuecomment-726189750>
alias go-reshim="asdf reshim golang && reload"
